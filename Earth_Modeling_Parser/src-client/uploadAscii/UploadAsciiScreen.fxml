<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uploadAscii.UploadAsciiScreenController">
   <children>
      <AnchorPane prefHeight="720.0" prefWidth="1280.0" VBox.vgrow="ALWAYS">
      	<children>
            <VBox layoutX="34.0" layoutY="23.0" prefHeight="720.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ComboBox fx:id="regionCB" pickOnBounds="false" prefWidth="150.0" promptText="Select Region:" VBox.vgrow="ALWAYS" />
                  <ComboBox fx:id="compoundCB" prefWidth="150.0" promptText="Select Compound:" visible="false" VBox.vgrow="ALWAYS" />
                  <TextField fx:id="yearTextField" promptText="Enter the year." visible="false" VBox.vgrow="ALWAYS" />
                  <TextField fx:id="monthTextField" prefHeight="25.0" prefWidth="147.0" promptText="Enter the month (0-11)." visible="false" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <HBox layoutX="444.0" layoutY="23.0">
               <children>
                  <TextArea fx:id="selectedFilesTextArea" editable="false" prefHeight="450.0" prefWidth="701.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="260.0" layoutY="140.0">
               <children>
                  <Button fx:id="selectFilesBtn" mnemonicParsing="false" text="Select File To Upload" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="1030.0" layoutY="561.0">
               <children>
                  <Button fx:id="sendToServerBtn" mnemonicParsing="false" text="Send to Server" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="251.0" layoutY="87.0">
               <children>
                  <CheckBox fx:id="overwriteCheckBox" mnemonicParsing="false" text="Overwrite Existing Map?" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <CheckBox fx:id="yearlyMapCheckBox" layoutX="251.0" layoutY="23.0" mnemonicParsing="false" selected="true" text="Yearly Map (no month)" />
            <CheckBox fx:id="deleteMapCheckBox" layoutX="251.0" layoutY="55.0" mnemonicParsing="false" text="Delete An Existing Map" />
            <VBox layoutX="515.0" layoutY="561.0">
               <children>
                  <Button fx:id="goToMultipleAsciiScreenBtn" mnemonicParsing="false" text="Use Automated ASCII Parser" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <HBox layoutX="551.0" layoutY="608.0">
               <children>
                  <Button fx:id="goToBrowseLogsScreenBtn" mnemonicParsing="false" text="View Server Logs" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
      	</children>
      </AnchorPane>
      <VBox>
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <children>
            		<Label fx:id="message" alignment="CENTER" prefHeight="21.0" prefWidth="400.0" text="Visualization of Earth Modelling Systems v0" textFill="RED" HBox.hgrow="ALWAYS">
            			<font>
            				<Font size="14.0" />
            			</font>
            		</Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
